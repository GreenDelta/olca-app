{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "strict": false,
    "target": "es2023",
    "jsx": "react-jsx",
    "allowJs": true,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": [
      "es2023",
      "dom"
    ],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./components/*"],
      "@/hooks/*": ["./hooks/*"]
    }
  },
  "include": [
    "src/**/*",
    "components/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}